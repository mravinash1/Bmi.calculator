<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edit_weight1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Enter your weight in (K.g)"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/edit_height1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_weight1"
        android:layout_marginTop="16dp"
        android:hint="Enter your height in meters"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/button_calculate1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_height1"
        android:layout_marginTop="16dp"
        android:text="Calculate BMI" />

    <TextView
        android:id="@+id/text_bmi1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_calculate1"
        android:layout_marginTop="16dp"
        android:textSize="16dp"
        android:text="Your BMI is: " />

</RelativeLayout>
